{
    "configurations": [
        {
            "name": "STM32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "USE_HAL_DRIVER",
                "STM32L431xx",
                "STM32_THREAD_SAFE_STRATEGY=4"
            ],
            "compilerPath": "/usr/bin/arm-none-eabi-gcc",
            "cStandard": "gnu17",
            "cppStandard": "c++23",
            "intelliSenseMode": "gcc-arm",
            "compilerArgs": [
                "-mcpu=cortex-m4",
                "-mfpu=fpv4-sp-d16",
                "-Wall",
                "-fdata-sections",
                "-ffunction-sections",
                "-Werror",
                "-lc",
                "-lm",
                "-lnosys "
            ]
        }
    ],
    "version": 4
}